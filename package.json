{
  "name": "@smm/smm",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf .turbo"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.8"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "eslint": "^9.38.0",
    "status-code-enum": "^1.0.0"
  }
}
